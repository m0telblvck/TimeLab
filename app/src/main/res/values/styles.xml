<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Белый цвет для чисел -->
    <style name="CustomDateTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Белый цвет для заголовков месяца и года -->
    <style name="CustomHeaderTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomMaterialDatePicker" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
